<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_nombre_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="@string/nombre_y_apellidos"
        android:textSize="25dp" />
    <EditText
        android:id="@+id/et_nombre_perfil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:hint="Nombre y apellidos" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView
            android:id="@+id/iv_imagen_perfil_modificar"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:contentDescription="@string/nav_header_desc"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            app:srcCompat="@mipmap/ic_launcher_round" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/bt_cambiar_imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar Foto"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <CheckBox
        android:id="@+id/cb_futbol_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Futbol"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>

    <CheckBox
        android:id="@+id/cb_basketbol_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basketbol"
        android:textSize="20dp"/>

    <CheckBox
        android:id="@+id/cb_beisbol_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beisbol"
        android:textSize="20dp"/>

    <CheckBox
        android:id="@+id/cb_tenis_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tenis"
        android:textSize="20dp"/>

    <CheckBox
        android:id="@+id/cb_volleybol_perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volleybol"
        android:textSize="20dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/bt_guardar_datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardar datos"
            android:textSize="20dp"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

</LinearLayout>